    rcall deley

    ldi r16,0x07
    ldi r17,0xbd
    out PORTB,r16
    out PORTD,r17
    rcall deley

ret

timmer: 

	sbis TIFR1, TOV1
	rjmp timmer 
	sbi TIFR1, TOV1
	ldi r16, high(34286)
	sts TCNT1H, r16
	ldi r16, low(34286)
	sts TCNT1L, r16
	ret

deley:

    ldi r20, 60
    ldi r19, 70
L1:
    dec r19
    brne L1  
    dec r20
    brne L1
    ret
